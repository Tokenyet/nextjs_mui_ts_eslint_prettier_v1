{
  "version": "2.0.0",
  "command": "tsc",
  "type":"shell",
  "args": ["-w", "-p", ".", "--noEmit"],
  "presentation": {
    "echo": true,
    "reveal": "always",
    "focus": false,
    "panel": "shared",
    "showReuseMessage": true,
    "clear": false
  },
  "isBackground": true,
  "problemMatcher": "$tsc-watch"
}